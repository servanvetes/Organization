
@model Proje1.DTOs.CategoryDto

@{
    ViewData["title"] = "Update Category";
}
<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>
<br />
<br />
<div class="form-group mb-3">
    <div class="row">
        <div class="col-4 offset-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="UpdateCategory">
                <input type="hidden"  asp-for="CategoryID" value="@Model.CategoryID" autocomplete="off"/>
                <div class="form-group mb-3">
                    <label>Category Name:</label>
                    <input type="text" asp-for="Name" value="@Model.Name" autocomplete="off" />
                </div>
                <div class="form-group d-grid gap-2 d-md-flex justify-content-md-center">
                    <button type="submit" value="AddCategory" class="btn btn-primary" /><i class="fa-solid fa-square-plus me-2"></i>Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
